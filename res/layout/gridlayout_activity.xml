        android:layout_column="1"
        android:layout_gravity="left"
        android:layout_marginTop="10dp"
        android:layout_row="2"
        android:text="×"
        android:textColor="#ffffff"
        android:textSize="40sp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="75dp"
